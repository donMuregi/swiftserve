# ===========================================
# SwiftServe Backend Production Configuration
# ===========================================
# Copy this to .env on the production server and fill in real values

# Django Core
SECRET_KEY=CHANGE-ME-generate-with-python-c-from-django-core-management-utils-import-get-random-secret-key-print-get-random-secret-key
DEBUG=False
ALLOWED_HOSTS=app.swiftcarservice.co.ke,swiftcarservice.co.ke

# Database (MySQL)
DB_ENGINE=mysql
DB_NAME=your_cpanel_prefix_swiftcar
DB_USER=your_cpanel_prefix_dbuser
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=3306

# CORS & CSRF (frontend domain)
CORS_ALLOWED_ORIGINS=https://swiftcarservice.co.ke
CSRF_TRUSTED_ORIGINS=https://swiftcarservice.co.ke,https://app.swiftcarservice.co.ke

# Cross-subdomain cookies (share session between app. and main domain)
COOKIE_DOMAIN=.swiftcarservice.co.ke
COOKIE_SAMESITE=Lax

# Frontend URL (for email links)
FRONTEND_URL=https://swiftcarservice.co.ke

# Email (update with your SMTP details)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@swiftcarservice.co.ke
ADMIN_EMAIL=admin@swiftcarservice.co.ke
